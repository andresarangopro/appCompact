<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"

    tools:context="com.example.felipearango.appcompact.activitys.Activity_Login">
        <!--  android:background="@drawable/black_background"-->



        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="15"
            android:gravity="center_horizontal|center_vertical"
            android:text="Regístrate!"
            android:textColor="@color/colorGreenBackground"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_marginTop="25dp"
            android:layout_weight="15"
            android:background="@drawable/edittext_style"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/ic_user"
            android:drawableLeft="@mipmap/ic_user"
            android:hint="E-mail"
            android:paddingLeft="5dp"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/txtRegistroEmail"/>
        <!-- android:drawableStart="@mipmap/ic_user"-->
        <EditText
            android:id="@+id/txtRegistroPass"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="15"
            android:background="@drawable/edittext_style"
            android:drawableLeft="@mipmap/ic_padlock"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/ic_padlock"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textColorHint="@color/colorAccent" />

        <EditText
            android:id="@+id/txtRegistroConfirPass"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="15"
            android:background="@drawable/edittext_style"
            android:drawableLeft="@mipmap/ic_padlock"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/ic_padlock"
            android:hint="Confirmar contraseña"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textColorHint="@color/colorAccent" />

        <Spinner
            android:layout_margin="10dp"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:background="@drawable/edittext_style"
            android:drawableStart="@mipmap/ic_chooser"
            android:drawableLeft="@mipmap/ic_chooser"
            android:id="@+id/spnTipoUser">

        </Spinner>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="15"
            android:background="@drawable/buttonlogin_style"
            android:text="Registrar"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:id="@+id/btnRegisterUser"/>


</LinearLayout>
