<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:weightSum="10"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:background="@color/redFaded"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:id="@+id/tvEncargado"
            android:background="@drawable/edit_text_style_claro"
            android:textColorHint="@color/colorAccent"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Encargado"
            android:textColor="@color/colorAccent"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:textColor="@color/colorAccent"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:id="@+id/tvNameReto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Nombre reto"
                android:background="@drawable/edit_text_style_claro"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tvPrivacidad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/colorAccent"
                android:text="Privacidad"
                android:textAlignment="textEnd"
                android:background="@drawable/edit_text_style_claro"
                android:textColorHint="@color/colorAccent"
                android:textSize="19dp"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>