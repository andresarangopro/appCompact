<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:weightSum="10"
    android:background="@color/colorSubTextFaded"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="120dp">
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_weight="8"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvNombreAula"
            android:textSize="20sp"
            android:text="Este ese el nombre del reto"
            android:textStyle="bold"
            android:layout_weight="1"
            android:hint="Este ese el nombre del reto"
            android:textColor="@color/colorYellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvProfesorEncargado"
            android:textColor="@color/colorAccentDark"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="Nombre aula"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvCodigoAula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:text="CÃ³digo de aula"
            android:textColor="@color/colorAccentDark"
            android:textSize="15sp" />
    </LinearLayout>
    <ImageView
        android:src="@mipmap/ic_arrow"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
</LinearLayout>